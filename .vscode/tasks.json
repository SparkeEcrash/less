{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "echo",
      "type": "shell",
      "command": "echo Hello"
    },
    {
      "label": "Sass Compile",
      "type": "shell",
      "command": "node-sass styles.scss styles.css",
      "group": "build"
    },
    {
      "label": "Less Compile",
      "type": "shell",
      "options": {
        "cwd": "./assets/less"
      },
      "command": "lessc style.less style.css",
      "group": "build",
      "problemMatcher": []
    },
    {
      "label": "dir",
      "type": "shell",
      "options": {
        "cwd": "./My_Files"
      },
      "command": "dir",
      "group": "build",
      "problemMatcher": []
    }
  ]
}
